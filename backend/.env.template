# Core Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Cerebras AI Configuration (for action extraction)
CEREBRAS_API_KEY=your_cerebras_api_key
CEREBRAS_MODEL=llama3.1-8b
CEREBRAS_TEMPERATURE=0.7
CEREBRAS_MAX_TOKENS=1024

# OpenAI Configuration (optional, for agentic mode)
OPENAI_API_KEY=your_openai_api_key

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./ultrathink.db

# Redis Configuration (optional, for memory caching)
# REDIS_URL=redis://localhost:6379

# Agentic Mode Configuration
USE_AGENTIC_MODE=true  # Enable LangGraph agent instead of simple extraction

# ===================================
# MCP SERVER CONFIGURATION
# ===================================

# GitHub MCP
ENABLE_GITHUB_MCP=true
GITHUB_TOKEN=ghp_your_github_personal_access_token
# Optional: Set default repo
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name

# Google Calendar MCP
ENABLE_GOOGLE_CALENDAR_MCP=true
# Get these from https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Google Calendar API
# 3. Create OAuth 2.0 credentials
# 4. Add http://localhost:8000/auth/callback to redirect URIs
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Slack MCP
ENABLE_SLACK_MCP=true
# Get these from https://api.slack.com/apps
# 1. Create a new Slack app
# 2. Add OAuth scopes: chat:write, channels:read, files:write, users:read
# 3. Install app to workspace
# 4. Get Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# Optional: App-level token for socket mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token
# Optional: Default channel to post to
SLACK_DEFAULT_CHANNEL=general

# ===================================
# OTHER MCP SERVERS (disabled by default)
# ===================================

# Filesystem MCP
ENABLE_FILESYSTEM_MCP=false
FILESYSTEM_ROOT=/tmp

# PostgreSQL MCP
ENABLE_POSTGRES_MCP=false
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost/dbname

# Notion MCP
ENABLE_NOTION_MCP=false
NOTION_API_KEY=secret_your_notion_integration_token

# Google Drive MCP
ENABLE_GOOGLE_DRIVE_MCP=false
# Uses same Google OAuth as Calendar

# Linear MCP
ENABLE_LINEAR_MCP=false
LINEAR_API_KEY=lin_api_your_linear_api_key

# Jira MCP
ENABLE_JIRA_MCP=false
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token

# Server Configuration
HOST=0.0.0.0
PORT=8000